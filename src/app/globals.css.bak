@tailwind base;
@tailwind components;
@tailwind utilities;

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

@layer base {
  :root {
    /* Navy color palette - matching V1 mockup */
    --navy-900: #0a1628;
    --navy-800: #0d2137;
    --navy-700: #1e3a5f;
    --navy-600: #2d4a6f;
    
    /* Teal accent */
    --teal-500: #14b8a6;
    --teal-600: #0d9488;
    --teal-400: #2dd4bf;
    
    /* Slate for text */
    --slate-50: #f8fafc;
    --slate-100: #f1f5f9;
    --slate-200: #e2e8f0;
    --slate-300: #cbd5e1;
    --slate-400: #94a3b8;
    --slate-500: #64748b;
    --slate-600: #475569;
    
    /* Status colors */
    --green-500: #22c55e;
    --green-400: #4ade80;
    --green-100: #dcfce7;
    --amber-500: #f59e0b;
    --amber-100: #fef3c7;
    --blue-500: #3b82f6;
    --blue-100: #dbeafe;
    --red-500: #ef4444;
    --red-100: #fee2e2;
    --purple-500: #a855f7;
    --purple-100: #f3e8ff;
  }
}

@layer base {
  * {
    @apply border-[var(--navy-600)];
  }
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--navy-900);
    color: #ffffff;
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

@layer components {
  /* Card Styles */
  .card {
    background: var(--navy-800);
    border: 1px solid var(--navy-600);
    border-radius: 12px;
  }
  
  /* Stat Cards with colored top border */
  .stat-card {
    @apply card relative overflow-hidden;
  }
  
  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
  }
  
  .stat-card.teal::before { background: var(--teal-500); }
  .stat-card.green::before { background: var(--green-500); }
  .stat-card.amber::before { background: var(--amber-500); }
  .stat-card.blue::before { background: var(--blue-500); }
  .stat-card.purple::before { background: var(--purple-500); }
  
  /* Buttons */
  .btn {
    @apply inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-semibold cursor-pointer transition-all duration-200;
  }
  
  .btn-primary {
    background: var(--teal-500);
    color: var(--navy-900);
  }
  
  .btn-primary:hover {
    background: var(--teal-400);
  }
  
  .btn-secondary {
    background: var(--navy-700);
    color: #ffffff;
    border: 1px solid var(--navy-600);
  }
  
  .btn-secondary:hover {
    background: var(--navy-600);
  }
  
  .btn-danger {
    background: var(--red-500);
    color: #ffffff;
  }
  
  .btn-success {
    background: var(--green-500);
    color: #ffffff;
  }
  
  /* Input Styles */
  .input {
    @apply w-full px-4 py-2.5 rounded-lg text-sm outline-none transition-all;
    background: var(--navy-700);
    border: 1px solid var(--navy-600);
    color: #ffffff;
  }
  
  .input::placeholder {
    color: var(--slate-500);
  }
  
  .input:focus {
    border-color: var(--teal-500);
  }
  
  /* Badges */
  .badge {
    @apply inline-flex items-center px-3 py-1 rounded-full text-xs font-medium;
  }
  
  .badge-teal {
    background: rgba(20, 184, 166, 0.15);
    color: var(--teal-400);
  }
  
  .badge-green {
    background: var(--green-100);
    color: #166534;
  }
  
  .badge-amber {
    background: var(--amber-100);
    color: #92400e;
  }
  
  .badge-blue {
    background: var(--blue-100);
    color: #1e40af;
  }
  
  .badge-red {
    background: var(--red-100);
    color: #991b1b;
  }
  
  .badge-purple {
    background: var(--purple-100);
    color: #7c3aed;
  }
  
  .badge-slate {
    background: rgba(148, 163, 184, 0.15);
    color: var(--slate-300);
  }
  
  /* Status badges */
  .status-automated {
    background: var(--green-100);
    color: #166534;
  }
  
  .status-pending {
    background: var(--amber-100);
    color: #92400e;
  }
  
  .status-review {
    background: var(--blue-100);
    color: #1e40af;
  }
  
  .status-captured {
    background: rgba(20, 184, 166, 0.15);
    color: var(--teal-400);
  }
  
  /* Navigation */
  .nav-item {
    @apply flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm transition-all cursor-pointer;
    color: var(--slate-300);
  }
  
  .nav-item:hover {
    background: var(--navy-700);
    color: #ffffff;
  }
  
  .nav-item.active {
    background: var(--teal-500);
    color: var(--navy-900);
    font-weight: 600;
  }
  
  /* Filter tabs */
  .filter-tabs {
    @apply flex p-1 rounded-lg;
    background: var(--navy-800);
    border: 1px solid var(--navy-600);
  }
  
  .filter-tab {
    @apply px-4 py-2 text-sm rounded-md transition-all cursor-pointer;
    color: var(--slate-400);
  }
  
  .filter-tab:hover {
    color: #ffffff;
  }
  
  .filter-tab.active {
    background: var(--teal-500);
    color: var(--navy-900);
    font-weight: 600;
  }
  
  /* Table styles */
  .data-table {
    @apply w-full;
    border-collapse: collapse;
  }
  
  .data-table thead {
    background: var(--navy-700);
  }
  
  .data-table th {
    @apply text-left px-4 py-3 text-xs font-semibold uppercase tracking-wider;
    color: var(--slate-400);
  }
  
  .data-table td {
    @apply px-4 py-4 text-sm;
    border-bottom: 1px solid var(--navy-600);
  }
  
  .data-table tr:hover {
    background: var(--navy-700);
  }
  
  .data-table tr:last-child td {
    border-bottom: none;
  }
  
  /* Type icons */
  .type-icon {
    @apply w-9 h-9 rounded-lg flex items-center justify-center text-lg;
  }
  
  .type-icon.auto {
    background: linear-gradient(135deg, var(--green-500), var(--teal-500));
    color: #ffffff;
  }
  
  .type-icon.ndc {
    background: rgba(59, 130, 246, 0.15);
    color: var(--blue-500);
  }
  
  .type-icon.brand {
    background: rgba(34, 197, 94, 0.15);
    color: var(--green-500);
  }
  
  .type-icon.therapy {
    background: rgba(168, 85, 247, 0.15);
    color: var(--purple-500);
  }
  
  .type-icon.interchange {
    background: rgba(245, 158, 11, 0.15);
    color: var(--amber-500);
  }
  
  .type-icon.audit {
    background: rgba(239, 68, 68, 0.15);
    color: var(--red-500);
  }
  
  /* Avatar */
  .avatar {
    @apply flex items-center justify-center rounded-full font-semibold;
    background: var(--teal-500);
    color: var(--navy-900);
  }
  
  .avatar-slate {
    background: var(--navy-600);
    color: var(--slate-300);
  }
  
  /* Icon button */
  .icon-btn {
    @apply w-10 h-10 rounded-lg flex items-center justify-center transition-all cursor-pointer;
    background: var(--navy-700);
    border: 1px solid var(--navy-600);
    color: var(--slate-400);
  }
  
  .icon-btn:hover {
    background: var(--navy-600);
    color: #ffffff;
  }
  
  /* Progress bar */
  .progress-bar {
    @apply h-2 rounded-full overflow-hidden;
    background: var(--navy-700);
  }
  
  .progress-bar-fill {
    @apply h-full rounded-full transition-all duration-500;
    background: var(--teal-500);
  }
  
  /* Value highlight */
  .value-positive {
    color: var(--green-500);
    font-weight: 700;
  }
  
  .value-negative {
    color: var(--red-500);
    font-weight: 700;
  }
  
  /* Label text */
  .label-text {
    @apply text-xs uppercase tracking-wider font-medium;
    color: var(--slate-400);
  }
  
  /* Sync dot animation */
  .sync-dot {
    @apply w-2 h-2 rounded-full;
    background: var(--green-500);
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--navy-800);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: var(--navy-600);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--slate-500);
}

/* Animation utilities */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(10px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.animate-fade-in {
  animation: fadeIn 0.2s ease-out;
}

.animate-slide-up {
  animation: slideUp 0.3s ease-out;
}
